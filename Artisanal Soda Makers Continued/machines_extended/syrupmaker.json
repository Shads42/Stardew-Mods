{
    "Changes": [
        {
            "LogName": "Add additional inputs for vanilla item based syrups",
            "Action": "EditData",
            "Target": "Data/Machines",
            "TargetField": ["(BC){{ModId}}_SyrupMaker", "OutputRules"],
            "Entries": {
                "{{ModId}}_Cornucopia_MelonSyrup": {
                    "Id": "{{ModId}}_MelonSyrup",
                    "Triggers": [
                        {
                            "Id": "CantaloupePlacedInMachine",
                            "Trigger": "ItemPlacedInMachine",
                            "RequiredItemId": "(O)Cornucopia_Cantaloupe"
                        },
                        {
                            "Id": "CanaryMelonPlacedInMachine",
                            "Trigger": "ItemPlacedInMachine",
                            "RequiredItemId": "(O)Cornucopia_CanaryMelon"
                        },
                        {
                            "Id": "HoneydewPlacedInMachine",
                            "Trigger": "ItemPlacedInMachine",
                            "RequiredItemId": "(O)Cornucopia_Honeydew"
                        }
                       
                    ],
                    
                    "OutputItem": [
                        {
                            "Id": "{{ModId}}_MelonSyrup",
                            "ItemId": "(O){{ModId}}_MelonSyrup",
                            "CustomData": {
                                "selph.ExtraMachineConfig.RequirementId.1": "(O)245",
                                "selph.ExtraMachineConfig.RequirementCount.1": 1,
                                "selph.ExtraMachineConfig.RequirementInvalidMsg": "{{i18n:Msg_Sugar}}"
